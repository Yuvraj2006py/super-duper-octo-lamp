# Copy to .env and fill in values. Never commit .env or any file containing real API keys or passwords.
APP_NAME=Job Application Assistant
ENVIRONMENT=dev
DEBUG=true

API_HOST=0.0.0.0
API_PORT=8000

DATABASE_URL=postgresql+psycopg://postgres:postgres@postgres:5432/job_assistant
REDIS_URL=redis://redis:6379/0

LOCAL_API_KEY=change-me
SECRET_KEY=dev-secret
TOKEN_TTL_SECONDS=28800

EMBEDDING_PROVIDER=mock
EMBEDDING_MODEL_NAME=mock-embed-v1
EMBEDDING_DIM=256
EMBEDDING_CACHE_DIR=/workspace/.cache/fastembed
# For free local BGE embeddings:
# EMBEDDING_PROVIDER=bge
# EMBEDDING_MODEL_NAME=BAAI/bge-small-en-v1.5
# Keep EMBEDDING_DIM=256 unless you migrate DB vectors to 384.
LLM_PROVIDER=mock
LLM_MODEL=gpt-4o-mini
LLM_API_KEY=
LLM_BASE_URL=https://api.openai.com/v1
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=400
LLM_TIMEOUT_SECONDS=45
# For Groq (OpenAI-compatible), set:
# LLM_PROVIDER=groq
# LLM_MODEL=llama-3.3-70b-versatile
# LLM_BASE_URL=https://api.groq.com/openai/v1

INGESTION_RATE_LIMIT=60
DRAFTING_RATE_LIMIT=120
RATE_LIMIT_WINDOW_SECONDS=60
MAX_APPLICATIONS_PER_COMPANY=2

OUTPUT_DIR=/output
DATA_DIR=/workspace/data
TEMPLATE_DIR=/workspace/app/templates

# Playwright-driven form capture/fill (safe defaults)
FORM_STORAGE_STATE_PATH=secrets/workday_state.json
FORM_FETCH_TIMEOUT_MS=120000
FORM_FETCH_WAIT_MS=2000
FORM_BROWSER_HEADLESS=true

# Submission safety
FORM_SUBMIT_MODE=mock
FORM_SUBMIT_RETRIES=2
FORM_SUBMIT_DRY_RUN=true
FORM_ALLOW_FINAL_SUBMIT=false
FORM_MAX_STEPS=12

# Local assets for upload fields (inside container paths)
RESUME_PDF_PATH=resume/resume.pdf
TRANSCRIPT_PDF_PATH=resume/transcript.pdf

# Workday credentials (never committed); password values containing '$' must be escaped as '$$' for docker compose.
WORKDAY_PASSWORD=
